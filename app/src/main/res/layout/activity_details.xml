<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.DetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ItemName"
        android:id="@+id/tvItemName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
       />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvItemName"
        android:id="@+id/horizontalScrollView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/ivItem1"
                tools:src="@mipmap/ic_launcher"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/ivItem2"
                tools:src="@mipmap/ic_launcher"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/ivItem3"
                tools:src="@mipmap/ic_launcher"/>



        </LinearLayout>


    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Description"
        android:id="@+id/tvItemDescription"
        android:layout_below="@id/horizontalScrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/tvItemStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvItemDescription"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messenger"
        android:id="@+id/btnMessenger"
        android:onClick="onMessengerClick"
        android:layout_alignTop="@+id/tvItemNegotiable"
        android:layout_alignRight="@+id/btnVenmo"
        android:layout_alignEnd="@+id/btnVenmo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venmo"
        android:id="@+id/btnVenmo"
        android:layout_below="@+id/btnMessenger"
        android:layout_toRightOf="@+id/tvVenmo"
        android:layout_toEndOf="@+id/tvVenmo"
        android:onClick="onVenmoClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like the item? Make a Transaction!"
        android:id="@+id/tvVenmo"
        android:textSize="17sp"
        android:layout_alignBottom="@+id/btnVenmo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interested? Message the Seller"
        android:id="@+id/tvMessenger"
        android:textSize="17sp"
        android:layout_alignBottom="@+id/btnMessenger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/tvItemPrice"
        android:layout_below="@+id/tvItemStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Negotiable"
        android:id="@+id/tvItemNegotiable"
        android:layout_below="@+id/tvItemPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etPrice"
        android:layout_above="@+id/tvItemNegotiable"
        android:layout_alignTop="@+id/tvItemPrice"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
