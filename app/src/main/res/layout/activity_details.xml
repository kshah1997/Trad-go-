<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="teamcool.tradego.DetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ItemName"
        android:id="@+id/tvItemName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
       />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/ivItem"
        android:layout_below="@+id/tvItemName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Description"
        android:id="@+id/tvDescription"
        android:layout_below="@+id/ivItem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/tvStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvDescription"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etStatus"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvDescription"
        android:layout_above="@+id/btnMessenger" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messenger"
        android:id="@+id/btnMessenger"
        android:layout_above="@+id/btnVenmo"
        android:layout_alignRight="@+id/btnVenmo"
        android:layout_alignEnd="@+id/btnVenmo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venmo"
        android:id="@+id/btnVenmo"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/etStatus"
        android:layout_toEndOf="@+id/etStatus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like the item? Make a Transaction!"
        android:id="@+id/tvVenmo"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interested? Message the Seller"
        android:id="@+id/tvMessenger"
        android:textSize="17sp"
        android:layout_alignBottom="@+id/btnMessenger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
