<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="teamcool.tradego.Activities.AddItemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlHorizontalScroll"
        android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/ivItem1"
                tools:src="@mipmap/ic_launcher"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/ivItem2"
                tools:src="@mipmap/ic_launcher"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/ivItem3"
                tools:src="@mipmap/ic_launcher"/>

        </LinearLayout>

    </HorizontalScrollView>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:id="@+id/tvItemName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/tvItemPrice"
        android:layout_below="@+id/tvItemName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Negotiable"
        android:id="@+id/tvItemNegotiable"
        android:layout_below="@+id/tvItemPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Description"
        android:id="@+id/tvItemDescription"
        android:layout_below="@+id/tvItemNegotiable"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:id="@+id/tvItemCategory"
        android:layout_below="@+id/tvItemDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/tvItemStatus"
        android:layout_below="@+id/tvItemCategory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Item"
        android:id="@+id/btnAddItem"
        android:onClick="onAddItemClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spCategory"
        android:layout_alignBottom="@+id/tvItemCategory"
        android:layout_toEndOf="@+id/tvItemDescription"
        android:layout_toRightOf="@id/tvItemDescription"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/tvItemDescription" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spStatus"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/spCategory"
        android:layout_alignLeft="@+id/spCategory"
        android:layout_alignStart="@+id/spCategory"
        android:layout_alignBottom="@+id/tvItemStatus" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/rbYes"
        android:layout_alignBottom="@+id/tvItemNegotiable"
        android:checked="false"
        android:layout_alignTop="@+id/rbNo"
        android:layout_marginLeft="200dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/rbNo"
        android:layout_alignRight="@id/rbYes"
        android:layout_alignBottom="@+id/tvItemNegotiable"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />

    </RelativeLayout>

</RelativeLayout>
